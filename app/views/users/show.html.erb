<% provide(:title, @user.name) %>
  <aside class="col-md-4">
    <div class="text-center">
    <section class="user_info">
      <%= image_tag @user.avatar.url(:medium) %>
      <h2><b><%= link_to @user.name, @user %></b></h2>
      <h2>I have shared <%= @user.microposts.count %> planning tips!</h2>
      <%= render 'shared/stats' %>
    </section>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>My <%= @user.microposts.count %> Planning Tips</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
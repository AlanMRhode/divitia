<p id="notice"><%= notice %></p>

<div class= "jumbotron"> 
  <h1>Assets</h1>
  <div class= "total_budget">
    <div class="text-center">
      <h2><%= link_to 'New Asset', new_user_asset_path %></h2>
    </div>

  <div class= "col-md">
    <% @assets.each do |asset| %>
          <h2><%= asset.name %> | 
          $ <%= asset.value %><br><br>
          <%= link_to 'Edit', edit_user_asset_path(asset) %> |
          <%= link_to 'Delete', asset, method: :delete, data: { confirm: 'Are you sure you want to delete this asset?' } %></h2>
    <% end %>
  </div>
</div>
<br>
</div>
